{
    "name": "chevere/router",
    "description": "A chevere router component.",
    "homepage": "https://chevere.org",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Rodolfo Berrios",
            "email": "rodolfo@chevere.org",
            "homepage": "https://chevere.org"
        }
    ],
    "require": {
        "chevere/chevere": "^1.1.x-dev",
        "nikic/fast-route": "^1.3",
        "psr/http-server-middleware": "^1.0"
    },
    "require-dev": {
        "chevere/var-dump": "^0.6.0",
        "phpstan/phpstan": "^1.8",
        "phpunit/phpunit": "^9.5",
        "symplify/easy-coding-standard": "^11.1"
    },
    "autoload": {
        "files": [
            "src/functions.php"
        ],
        "psr-4": {
            "Chevere\\Router\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chevere\\Router\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "check": [
            "composer phpstan",
            "composer test-rep",
            "composer infection"
        ],
        "infection": "infection --only-covered -j10",
        "phpstan": "vendor/bin/phpstan analyze src/ --memory-limit 512M --level 9",
        "test": "vendor/bin/phpunit -c phpunit.xml",
        "test-rep": "vendor/bin/phpunit -c phpunit-report.xml",
        "update-cs": "mkdir -p .ecs && cd .ecs && curl -O https://raw.githubusercontent.com/chevere/code-style/main/.ecs/ecs-chevere.php"
    },
    "scripts-descriptions": {
        "check": "Runs all checks",
        "infection": "Runs infection",
        "phpstan": "Runs phpstan",
        "test": "Run test suite",
        "test-rep": "Run test suite (report)",
        "update-cs": "Update Chevere code style definition"
    }
}
